{
  "name": "minecraft-launcher",
  "version": "0.1.0",
  "description": "Complete Minecraft launcher built with Electron and React",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "dist": "electron-builder",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "test": "jest"
  },
  "build": {
    "appId": "com.example.minecraftlauncher",
    "productName": "MinecraftLauncher",
    "files": [
      "main.js",
      "preload.js",
      "libs",
      "renderer/dist",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "electron-updater": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "eslint-plugin-react": "^7.33.0"
  }
}