{
  "name": "minecraft-launcher",
  "version": "0.1.0",
  "description": "Example Minecraft launcher using Electron and React",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "lint": "eslint .",
    "test": "jest",
    "build": "tsc",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.minecraft.launcher",
    "files": [
      "main.js",
      "preload.js",
      "libs/**",
      "renderer/**",
      "assets/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "win": { "target": "nsis" },
    "mac": { "target": "dmg" },
    "linux": { "target": "AppImage" }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "electron-updater": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
